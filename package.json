{
  "name": "globalizer",
  "version": "1.0.0",
  "scripts": {
    "build": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/css/input.css -o ./src/css/main.css",
    "watch": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/css/input.css -o ./src/css/main.css --watch",
    "prod": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/css/input.css -o ./src/css/main.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}